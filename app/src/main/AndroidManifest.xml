<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.technopark.ivankov.referee">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.technopark.ivankov.referee.LoginActivity"
            android:label="@string/title_login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.technopark.ivankov.referee.MatchListActivity"
            android:label="@string/title_match_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.technopark.ivankov.referee.MatchDetailActivity"
            android:label="@string/title_match_detail"
            android:parentActivityName="com.technopark.ivankov.referee.MatchListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.technopark.ivankov.referee.MatchListActivity" />
        </activity>
        <activity
            android:name="com.technopark.ivankov.referee.MatchActivity"
            android:label="@string/title_match"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.technopark.ivankov.referee.PlayerDetailActivity"
            android:label="@string/title_player_detail"
            android:parentActivityName="com.technopark.ivankov.referee.MatchActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.technopark.ivankov.referee.MatchActivity" />
        </activity>
        <activity
            android:name="com.technopark.ivankov.referee.ActionListActivity"
            android:label="@string/title_action_list"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>